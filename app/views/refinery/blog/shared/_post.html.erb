<% if post.live? %>
<div class="mb-4 col-lg-6 col-md-12">
  <div class="card border-0">
    <img class="blog-image" src="https://placekitten.com/1366/768" alt="hello" />
    <div class="card-body">
      <h4 class="card-title mb-4 underline">
        <a class="text-dark" href="<%= refinery.blog_post_path(post) %>"><%= post.title %></a>
      </h4>
      <p class="card-text"><%= post.intro %></p>
      <div class="post-footer">
        <span class="date"><%= post.published_at.strftime('%Y-%m-%d') %></span>
        <span class="mx-3">|</span>
        <span><i class="far fa-comment"></i>: <%= post.comments.length %></span>
        <div class="mt-4">
          <a href="<%= refinery.blog_post_path(post) %>" role="button" class="btn btn-success btn-sm ">Read More</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
